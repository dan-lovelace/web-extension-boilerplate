{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": false,
    "isolatedModules": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "paths": {
      "@wexb/background": ["packages/background"],
      "@wexb/content": ["packages/content"],
      "@wexb/popup": ["packages/popup"],
      "@wexb/shared": ["packages/shared"],
      "@wexb/types": ["packages/types"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  }
}
